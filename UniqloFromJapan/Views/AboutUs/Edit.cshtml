@model AboutUsModel

@{
    var aboutUsModel = Model;
}

<form action="" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label>About us title</label>
        <input type="text" class="form-control" name="title" value="@aboutUsModel.Title">
    </div>

    <div class="form-group">
        <label>About us description</label>
        <textarea class="form-control" rows="3" name="description">@aboutUsModel.Description</textarea>
    </div>

    @*<input type="file" name="ImageData" id="ImageData" onchange="fileCheck(this);" />
    <hr />*@
    <button type="submit" class="btn btn-primary" style="width: 100%;">Add product</button>
</form>